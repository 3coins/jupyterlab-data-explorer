    "noEmitOnError": true,
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "types": ["node"]
  },
  "include": ["src/*"],
  "references": [
    {
      "path": "../dataregistry"
    },
    {
      "path": "../dataregistry-registry"
    }
  ]
}

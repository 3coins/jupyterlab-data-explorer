{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "npm run build:dev",
    "build:dev": "npm install && npm run clean:packages && lerna bootstrap && npm run build:packages && npm run link:packages",
    "build:packages": "lerna run build",
    "build:watch": "tsc --build --watch --listEmittedFiles packages/*",
    "lint": "echo 'TODO'",
    "clean:node": "lerna clean && rimraf node_modules",
    "clean:packages": "lerna run clean",
    "link:packages": "lerna run link",
    "unlink:packages": "lerna run unlink"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "eslint": "6.1.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "1.6.1",
    "lerna": "^3.16.4",
    "rimraf": "~2.6.2",
    "typescript": "3.5.3"
  }
}
